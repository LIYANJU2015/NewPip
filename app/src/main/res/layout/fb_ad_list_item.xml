<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fb_list_item_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/image_ad_frame"
            android:background="@drawable/dummy_thumbnail"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_width="@dimen/video_item_search_thumbnail_image_width"
            android:layout_height="@dimen/video_item_search_thumbnail_image_height">

            <ImageView
                android:elevation="4dp"
                android:id="@+id/image_ad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fb_ad_icon"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <ImageView
            android:background="@color/white"
            android:elevation="4dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/image_ad2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fb_ad_icon"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="6dp"
            android:paddingRight="0dp"
            android:paddingStart="6dp">

            <TextView
                android:text="2222222"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/video_item_search_title_text_size"/>

            <TextView
                android:layout_below="@id/title"
                android:layout_marginTop="6dp"
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/video_item_search_upload_date_text_size"
                android:textColor="?android:textColorSecondary" />
        </RelativeLayout>


        <TextView
            android:id="@+id/call_btn_tv"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/fb_ad_actionbtn_selector"
            android:gravity="center"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:text="2222222"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

    </LinearLayout>

    <FrameLayout
        android:padding="2dp"
        android:id="@+id/fb_adChoices2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:visibility="invisible" />


</FrameLayout>